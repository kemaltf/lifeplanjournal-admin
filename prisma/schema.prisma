// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Store {
  id         String      @id @default(uuid())
  name       String
  user_id    String
  billboards Billboard[]
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
}

model Billboard {
  id        String             @id @default(uuid())
  storeId   String
  Store     Store              @relation(fields: [storeId], references: [id])
  label     String
  images    ImageOnBillboard[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([storeId])
}

model Image {
  id        String             @id @default(uuid())
  filename  String
  filetype  String
  fileimage String
  datetime  String
  filesize  String
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  billboard ImageOnBillboard[]
}

model ImageOnBillboard {
  id          String    @id @default(uuid())
  billboardId String
  billboard   Billboard @relation(fields: [billboardId], references: [id])
  imageId     String
  image       Image     @relation(fields: [imageId], references: [id])

  @@index([billboardId], name: "idx_billboard_id")
  @@index([imageId], name: "idx_image_id")
}

model User {
  id              String    @id @default(uuid()) // Primary Key and Default Value as UUID
  username        String    @unique
  first_name      String
  last_name       String
  email           String    @unique
  email_verified  DateTime?
  image           String?
  hashed_password String
  phone_number    Int
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
}
